{% extends 'base.html.twig' %}

{% block body %}
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Payments</th>
            <th># of payments</th>
            <th>Committed at</th>
        </tr>
        </thead>
        <tbody>
            {% for payment in payments %}
                <tr>
                    <td>
                        <a href="{{ path('admin_payments_edit', {'id': payment.id}) }}" class="btn btn-xs btn-success">
                            <span class="fa fa-pencil"></span>
                            {{ payment.name }}
                        </a>
                    </td>
                    <td>{{ payment.paymentCount }}</td>
                    <td>{{ payment.committedAt|date('Y-m-d') }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}